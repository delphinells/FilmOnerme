@model FilmOnerme.Models.Film

@{
    ViewData["Title"] = Model.Baslik;
}

<div style="max-width: 800px; margin: 40px auto; padding: 20px;">
    <div style="background-color: #1c1c1c; border-radius: 10px; padding: 20px;">
        <h2 style="color: #FFD700; margin: 0 0 30px 0;">@Model.Baslik</h2>

        <div style="color: #fff; margin-bottom: 30px;">
            <div style="display: grid; gap: 15px;">
                <p style="margin: 0; display: flex; align-items: center;">
                    <i class="fas fa-film" style="color: #FFD700; width: 25px;"></i>
                    <span style="margin-left: 10px;">@Model.FilmTuru</span>
                </p>
                <p style="margin: 0; display: flex; align-items: center;">
                    <i class="fas fa-user-tie" style="color: #FFD700; width: 25px;"></i>
                    <span style="margin-left: 10px;">@Model.Yonetmen</span>
                </p>
                <p style="margin: 0; display: flex; align-items: center;">
                    <i class="fas fa-calendar" style="color: #FFD700; width: 25px;"></i>
                    <span style="margin-left: 10px;">@Model.YapimYili</span>
                </p>
                <p style="margin: 0; display: flex; align-items: center;">
                    <i class="fas fa-star" style="color: #FFD700; width: 25px;"></i>
                    <span style="margin-left: 10px;">@Model.ImdbPuani</span>
                </p>
                <p style="margin: 0; display: flex; align-items: center;">
                    <i class="fas fa-users" style="color: #FFD700; width: 25px;"></i>
                    <span style="margin-left: 10px;">@Model.RandevuSayisi randevu</span>
                </p>
                <p style="margin: 0; display: flex; align-items: center;">
                    <i class="fas fa-clock" style="color: #FFD700; width: 25px;"></i>
                    <span style="margin-left: 10px;">Gösterim: @Model.GosterimTarihi.ToString("dd MMMM yyyy")</span>
                </p>
            </div>
        </div>

        <div style="margin: 30px 0;">
            <h3 style="color: #FFD700; margin: 0 0 15px 0;">Film Hakkında</h3>
            <p style="color: #fff; line-height: 1.6; margin: 0;">@Model.Aciklama</p>
        </div>

        <div style="display: flex; gap: 15px; margin-top: 30px;">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="@Url.Action("CreateAppointment", new { id = Model.Id })" style="
                    flex: 1;
                    text-align: center;
                    padding: 12px 20px;
                    background-color: #28a745;
                    color: #fff;
                    text-decoration: none;
                    border-radius: 5px;
                    font-weight: 500;
                    transition: opacity 0.3s;
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    gap: 8px;">
                    <i class="fas fa-calendar-plus"></i>
                    Randevu Al
                </a>
            }
            <a href="@Url.Action("Index")" style="
                flex: 1;
                text-align: center;
                padding: 12px 20px;
                background-color: #6c757d;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: opacity 0.3s;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                gap: 8px;">
                <i class="fas fa-arrow-left"></i>
                Listeye Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Button hover effect
            $('a[style*="background-color"]').hover(
                function() { $(this).css('opacity', '0.8'); },
                function() { $(this).css('opacity', '1'); }
            );
        });
    </script>
}
