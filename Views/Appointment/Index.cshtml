@model List<FilmOnerme.Models.Appointment>
@{
    ViewData["Title"] = "Randevular";
}

<div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <div style="display: flex; align-items: center; gap: 10px;">
            <i class="fas fa-calendar" style="font-size: 2rem; color: #1c1c1c;"></i>
            <h2 style="font-size: 2.5rem; margin: 0; color: #1c1c1c;">Film Randevuları</h2>
        </div>
        <a href="@Url.Action("Create", "Appointment")" style="
            background-color: #FFD700;
            color: #1c1c1c;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
            transition: all 0.3s;">
            <i class="fas fa-plus"></i> Yeni Randevu Ekle
        </a>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
        @foreach (var item in Model)
        {
            <div style="background-color: #1c1c1c; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.2); overflow: hidden; transition: transform 0.3s; aspect-ratio: 1;">
                <div style="padding: 15px; height: 100%; display: flex; flex-direction: column;">
                    <h3 style="margin: 0 0 10px 0; font-size: 1.5rem; color: #FFD700;">@item.Film.Baslik</h3>
                    
                    <div style="color: #FFD700; margin-bottom: 10px; font-size: 0.9rem;">
                        <p style="margin: 5px 0;"><strong>Kullanıcı:</strong> @item.KullaniciAdi</p>
                        <p style="margin: 5px 0;"><strong>Tarih:</strong> @item.Tarih.ToString("dd MMM yyyy")</p>
                        <p style="margin: 5px 0;"><strong>Saat:</strong> @item.Tarih.ToString("HH:mm")</p>
                    </div>

                    <div style="margin-top: auto; display: flex; gap: 5px;">
                        <a href="@Url.Action("Details", "Appointment", new { id = item.Id })" style="
                            flex: 1;
                            text-align: center;
                            padding: 8px;
                            text-decoration: none;
                            color: #1c1c1c;
                            background-color: #FFD700;
                            border-radius: 5px;
                            font-size: 0.85rem;
                            transition: all 0.3s;">
                            <i class="fas fa-info-circle"></i> Detay
                        </a>
                        <a href="@Url.Action("Edit", "Appointment", new { id = item.Id })" style="
                            flex: 1;
                            text-align: center;
                            padding: 8px;
                            text-decoration: none;
                            color: #1c1c1c;
                            background-color: #FFD700;
                            border-radius: 5px;
                            font-size: 0.85rem;
                            transition: all 0.3s;">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a href="@Url.Action("Delete", "Appointment", new { id = item.Id })" style="
                            flex: 1;
                            text-align: center;
                            padding: 8px;
                            text-decoration: none;
                            color: #ffffff;
                            background-color: #dc3545;
                            border-radius: 5px;
                            font-size: 0.85rem;
                            transition: all 0.3s;">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Kartlara hover efekti
            $('[style*="background-color: #1c1c1c"]').hover(
                function() { 
                    $(this).css('transform', 'translateY(-5px)');
                },
                function() { 
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // Butonlara hover efekti
            $('a').hover(
                function() { 
                    $(this).css('opacity', '0.8');
                },
                function() { 
                    $(this).css('opacity', '1');
                }
            );
        });
    </script>
}
