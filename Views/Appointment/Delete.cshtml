@model FilmOnerme.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<div style="max-width: 600px; margin: 40px auto; padding: 20px;">
    <div style="background-color: #1c1c1c; border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);">
        <h2 style="color: #FFD700; margin-bottom: 20px; text-align: center;">Randevu Silme Onayı</h2>
        
        <div style="color: #FFD700; margin-bottom: 20px;">
            <h3 style="color: #FFD700; margin-bottom: 15px;">@Model.Film.Baslik</h3>
            <p style="margin: 10px 0;"><strong>Kullanıcı:</strong> @Model.KullaniciAdi</p>
            <p style="margin: 10px 0;"><strong>Tarih:</strong> @Model.Tarih.ToString("dd MMM yyyy")</p>
            <p style="margin: 10px 0;"><strong>Saat:</strong> @Model.Tarih.ToString("HH:mm")</p>
        </div>

        <div style="color: #ffffff; text-align: center; margin: 20px 0;">
            <p>Bu randevuyu silmek istediğinizden emin misiniz?</p>
        </div>

        <form asp-action="Delete" method="post" style="display: flex; gap: 10px; justify-content: center;">
            <input type="hidden" asp-for="Id" />
            <button type="submit" style="
                background-color: #dc3545;
                color: #ffffff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                font-size: 0.9rem;
                display: flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s;">
                <i class="fas fa-trash"></i> Sil
            </button>
            <a href="@Url.Action("Index")" style="
                background-color: #FFD700;
                color: #1c1c1c;
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 0.9rem;
                display: flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s;">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Butonlara hover efekti
            $('button, a').hover(
                function() { 
                    $(this).css('opacity', '0.8');
                },
                function() { 
                    $(this).css('opacity', '1');
                }
            );
        });
    </script>
} 