@model FilmOnerme.Models.UserProfile

@{
    ViewData["Title"] = "Profili Düzenle";
}

<div style="max-width: 800px; margin: 40px auto; padding: 20px;">
    <div style="background-color: #1c1c1c; border-radius: 10px; padding: 20px;">
        <h2 style="color: #FFD700; margin: 0 0 30px 0;">Profili Düzenle</h2>

        <form asp-action="Edit" method="post" style="display: grid; gap: 20px;">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div>
                <label asp-for="FullName" style="display: block; color: #FFD700; margin-bottom: 8px;">Ad Soyad</label>
                <input asp-for="FullName" style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #FFD700;
                    background-color: #1c1c1c;
                    color: #fff;
                    border-radius: 5px;
                    outline: none;" />
                <span asp-validation-for="FullName" style="color: #dc3545; font-size: 0.875rem;"></span>
            </div>

            <div>
                <label asp-for="Bio" style="display: block; color: #FFD700; margin-bottom: 8px;">Biyografi</label>
                <textarea asp-for="Bio" rows="4" style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #FFD700;
                    background-color: #1c1c1c;
                    color: #fff;
                    border-radius: 5px;
                    outline: none;
                    resize: vertical;"></textarea>
                <span asp-validation-for="Bio" style="color: #dc3545; font-size: 0.875rem;"></span>
            </div>

            <div>
                <label asp-for="FavoriteGenres" style="display: block; color: #FFD700; margin-bottom: 8px;">Favori Film Türleri</label>
                <select asp-for="FavoriteGenres" style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #FFD700;
                    background-color: #1c1c1c;
                    color: #fff;
                    border-radius: 5px;
                    outline: none;">
                    <option value="">Seçiniz</option>
                    <option value="Aksiyon">Aksiyon</option>
                    <option value="Komedi">Komedi</option>
                    <option value="Drama">Drama</option>
                    <option value="Bilim Kurgu">Bilim Kurgu</option>
                    <option value="Korku">Korku</option>
                    <option value="Romantik">Romantik</option>
                    <option value="Gerilim">Gerilim</option>
                    <option value="Macera">Macera</option>
                    <option value="Animasyon">Animasyon</option>
                    <option value="Belgesel">Belgesel</option>
                </select>
                <span asp-validation-for="FavoriteGenres" style="color: #dc3545; font-size: 0.875rem;"></span>
                <small style="color: #6c757d; display: block; margin-top: 4px;">En sevdiğiniz film türünü seçin</small>
            </div>

            <div>
                <label asp-for="FavoriteDirector" style="display: block; color: #FFD700; margin-bottom: 8px;">En Sevdiğiniz Yönetmen</label>
                <input asp-for="FavoriteDirector" style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #FFD700;
                    background-color: #1c1c1c;
                    color: #fff;
                    border-radius: 5px;
                    outline: none;" />
                <span asp-validation-for="FavoriteDirector" style="color: #dc3545; font-size: 0.875rem;"></span>
            </div>

            <div>
                <label asp-for="WatchingFrequency" style="display: block; color: #FFD700; margin-bottom: 8px;">Film İzleme Sıklığı</label>
                <select asp-for="WatchingFrequency" style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #FFD700;
                    background-color: #1c1c1c;
                    color: #fff;
                    border-radius: 5px;
                    outline: none;">
                    <option value="">Seçiniz</option>
                    <option value="Her gün">Her gün</option>
                    <option value="Haftada birkaç kez">Haftada birkaç kez</option>
                    <option value="Haftada bir">Haftada bir</option>
                    <option value="Ayda birkaç kez">Ayda birkaç kez</option>
                    <option value="Ayda bir">Ayda bir</option>
                    <option value="Nadiren">Nadiren</option>
                </select>
                <span asp-validation-for="WatchingFrequency" style="color: #dc3545; font-size: 0.875rem;"></span>
            </div>

            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button type="submit" style="
                    background-color: #FFD700;
                    color: #1c1c1c;
                    border: none;
                    padding: 10px 20px;
                    border-radius: 5px;
                    cursor: pointer;
                    font-weight: 500;
                    transition: all 0.3s;">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a href="@Url.Action("Index", "Profile")" style="
                    background-color: #6c757d;
                    color: #fff;
                    text-decoration: none;
                    padding: 10px 20px;
                    border-radius: 5px;
                    transition: all 0.3s;">
                    <i class="fas fa-times"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Input focus effect
            $('input, select, textarea').focus(function() {
                $(this).css('border-color', '#ffd700');
            }).blur(function() {
                $(this).css('border-color', '#FFD700');
            });

            // Button hover effect
            $('button, a').hover(
                function() { $(this).css('opacity', '0.8'); },
                function() { $(this).css('opacity', '1'); }
            );
        });
    </script>
} 